<% if language.new_record?
     language_div = 'languageNew' -%>
<div id="languageNew">
<% else
     language_div = "language#{language.id}"
   end %>
   <% remote_form_for(:language, language, :url => patient_data_url_for(patient_data, language), :html => {:method => http_method(language)}, :update => language_div) do |f| -%>
<table>
  <tr class="<%= cycle("darkzebra", "lightzebra")%>">
    <td class="lighttext">Language <%= print_validation_for language, :iso_language_id %></td>
    <td>
      <%= f.select :iso_language_id, @isoLanguages.collect{|iso_language| [iso_language.name, iso_language.id]} %>       
    </td>
  </tr>
  <tr class="<%= cycle("darkzebra", "lightzebra")%>">
    <td class="lighttext">Country <%= print_validation_for language, :iso_country_id %></td>
    <td>
      <%= f.select :iso_country_id, @isoCountries.collect{|iso_country| [iso_country.name, iso_country.id]} %>       
    </td>
  </tr>
  <tr class="<%= cycle("darkzebra", "lightzebra")%>">
    <td class="lighttext">Mode <%= print_validation_for language, :language_ability_mode_id %></td>
    <td>
      <%= f.select :language_ability_mode_id, @languageAbilityModes.collect{|language_ability_mode| [language_ability_mode.name, language_ability_mode.id]}, {:include_blank => true} %>       
    </td>
  </tr>
  <tr class="<%= cycle("darkzebra", "lightzebra")%>">
    <td class="lighttext">Preference <%= print_validation_for language, :preference %></td>
    <td>
      <%= f.check_box :preference %>
    </td>
  </tr>
  <tr class="<%= cycle("darkzebra", "lightzebra")%>">
    <td></td>
    <td>
      <%= f.submit "Save" %>
    </td>
  </tr>
</table>                         
<% end -%>
<% if language.new_record? -%>
</div>
<% end -%>
