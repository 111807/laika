<% if provider.new_record?
     provider_div = 'providerNew' 
     html_options = {} -%>
<div id="providerNew">
<% else
     provider_div = "provider#{provider.id}"
     html_options = {:method => 'put'}
   end %>
<% remote_form_for(:provider, provider,  :url => patient_data_instance_provider_path(patient_data, provider), :html => html_options,
                   :update => provider_div) do |f| -%>
<table>
  <tr class="<%= cycle("darkzebra", "lightzebra")%>">
    <td class="lighttext">Start Service</td>
    <td>
      <%= f.calendar_date_select :start_service %>
    </td>
  </tr>
  <tr class="<%= cycle("darkzebra", "lightzebra")%>">
    <td class="lighttext">End Service</td>
    <td>
      <%= f.calendar_date_select :end_service %>
    </td>
  </tr>
  <%= render :partial => '/person_names/edit', :locals => {:person_name => provider.person_name}%>
  <tr class="<%= cycle("darkzebra", "lightzebra")%>">
    <td class="lighttext">Provider Type</td>
    <td>
      <%= f.select :provider_type_id, @providerTypes.collect{|provider_type| [provider_type.name, provider_type.id]}, {:include_blank => true} %>
    </td>
  </tr>
  <tr class="<%= cycle("darkzebra", "lightzebra")%>">
    <td class="lighttext">Provider Role</td>
    <td>
      <%= f.select :provider_role_id, @providerRoles.collect{|provider_role| [provider_role.name, provider_role.id]}, {:include_blank => true} %>
    </td>
  </tr>
  <tr class="<%= cycle("darkzebra", "lightzebra")%>">
    <td class="lighttext">Provider Role Description</td>
    <td>
    <%= f.text_field :provider_role_free_text %>
    </td>
  </tr>
  <%= render :partial => '/addresses/edit', :locals => {:address => provider.address}%>
  <%= render :partial => '/telecoms/edit', :locals => {:telecom => provider.telecom}%>

  <tr class="<%= cycle("darkzebra", "lightzebra")%>">
    <td class="lighttext">Organization</td>
    <td>
    <%= f.text_field :organization %>
    </td>
  </tr>
  <tr class="<%= cycle("darkzebra", "lightzebra")%>">
    <td class="lighttext">Patient Identifier</td>
    <td>
    <%= f.text_field :patient_identifier %>
    </td>
  </tr>
  <tr class="<%= cycle("darkzebra", "lightzebra")%>">
    <td></td>
    <td>
      <%= f.submit "Save" %>
    </td>
  </tr>
</table>
<% end %>
<% if provider.new_record? -%>
</div>
<% end -%>