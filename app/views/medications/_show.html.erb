<table>
<tr class="<%= cycle("darkzebra", "lightzebra")%>">
  <td class="lighttext">Product Coded Display Name</td>
  <td><%= h medication.product_coded_display_name %></td>
</tr>
<tr class="<%= cycle("darkzebra", "lightzebra")%>">
  <td class="lighttext">Product Code</td>
  <td><%= h medication.product_code %></td>
</tr>
<tr class="<%= cycle("darkzebra", "lightzebra")%>">
  <td class="lighttext">Code System Name</td>
  <td><% if medication.code_system != nil %><%=h medication.code_system.name %><% end %></td>
</tr>
<tr class="<%= cycle("darkzebra", "lightzebra")%>">
  <td class="lighttext">Free Text Brand Name</td>
  <td><%=h medication.free_text_brand_name %></td>
</tr>
<tr class="<%= cycle("darkzebra", "lightzebra")%>">
  <td class="lighttext">Medication Type</td>
  <td><% if medication.medication_type != nil %><%=h medication.medication_type.name %><% end %></td>
</tr>
<tr class="<%= cycle("darkzebra", "lightzebra")%>">
  <td class="lighttext">Status</td>
  <td><%=h medication.status %></td>
</tr>
<tr class="<%= cycle("darkzebra", "lightzebra")%>">
  <td class="lighttext">Quantity Ordered Value</td>
  <td><%=h medication.quantity_ordered_value %></td>
</tr>
<tr class="<%= cycle("darkzebra", "lightzebra")%>">
  <td class="lighttext">Quantity Ordered Unit</td>
  <td><%=h medication.quantity_ordered_unit %></td>
</tr>
<tr class="<%= cycle("darkzebra", "lightzebra")%>">
  <td class="lighttext">Expiration Date</td>
  <td><% if medication.expiration_time != nil %><%=h medication.expiration_time.strftime("%m/%d/%Y") %><% end %></td>
</tr>
<tr class="<%= cycle("darkzebra", "lightzebra")%>">
  <td></td>
  <td>
    <%= link_to_remote 'Edit', :update => "medication#{medication.id}",
                               :url => edit_patient_data_instance_medication_path(patient_data, medication),
                               :method => 'get' %>
  </td>
</tr>
</table>
