        <td class="hitsp_c32_attribute_value">
          <div class="person_editable">
            <%= address.text_field :postal_code %>
          </div>
        </td>
        <td class="hitsp_c32_attribute_name">Country:</td>
        <td class="hitsp_c32_attribute_value">
          <div class="person_editable">
            <%= address.text_field :country %>
          </div>
        </td>
      </tr>
      <% end -%>
      <% fields_for registration_information.telecom do |telecom| -%>
      <tr>
        <td class="hitsp_c32_attribute_name">Home Phone:</td>
        <td class="hitsp_c32_attribute_value">
          <div class="person_editable">
            <%= telecom.text_field :home_phone %>
          </div>
        </td>
        <td class="hitsp_c32_attribute_name">Mobile Phone:</td>
        <td class="hitsp_c32_attribute_value">
          <div class="person_editable">
            <%= telecom.text_field :mobile_phone %>
