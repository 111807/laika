<!-- Start Personal Information Module -->
<% remote_form_for(:registration_information, 
                   :url => patient_data_instance_registration_information_path(patient_data),
                   :update => 'personInformationContainer') do |f| %>
<div id="person">
<table class="hitsp_c32_module_header">
  <tbody>
    <tr>
      <td class="hitsp_c32_module_name">Person Information</td>
      <td align="right">
        <%= f.submit "Save" %>
      </td>
    </tr>
  </tbody>
</table>
<div id="hitsp_32_person_info">
  <table class="hitsp_c32_module">
    <tbody>
      <tr>
        <td class="hitsp_c32_attribute_name">Person ID:</td>
        <td colspan="3" class="hitsp_c32_attribute_value">
          <div class="person_editable">
            <%= f.text_field :person_identifier %>           
          </div>
        </td>
      </tr>
      </tr>
      <%= render :partial => '/person_names/edit', :locals => {:person_name => registration_information.person_name}%>
      <tr>
        <td class="hitsp_c32_attribute_name">Date of Birth:</td>
        <td class="hitsp_c32_attribute_value">
            <%= f.date_select :birth_date %>
        </td>
        <td class="hitsp_c32_attribute_name">Gender:</td>
        <td class="hitsp_c32_attribute_value">
          <div class="person_editable">
            <%= f.select :gender, ['Male', 'Female'] %>
          </div>
        </td>
      </tr>
      <tr>
        <td class="hitsp_c32_attribute_name">Marital Status:</td>
        <td class="hitsp_c32_attribute_value">
          <div class="person_editable">
            <%= f.select :marital_status,
              ["Single",
              "Married",
              "Divorced ",
              "Never married",
              "Divorced/annulled",
              "Divorced/separated",
              "Annulled",
              "Widowed",
              "Separated, NOS",
              "Separated, legal",
              "Separated, nonlegal",
              "Temporary separation",
              "Permanent separation",
              "Consensual union",
              "Unknown",
              "Common Law",
              "Domestic Partner",
              "Registered Domestic Partner",
              "Living together",
              "Interlocutory",
              "Other",
              "Unreported"]
            %> 
          </div>
        </td>
        <td class="hitsp_c32_attribute_name">Religious Affiliation:</td>
        <td class="hitsp_c32_attribute_value">
          <div class="person_editable">
            <%= f.select :religious_affiliation,
             ["Advent Christian Church",
             "Agnostic",
             "Atheist",
             "Bahai",
             "Baptist",
             "Bible Protestant",
             "Buddhist",
             "Catholic",
             "Christian Science",
             "Christian, Other",
             "Church of God",
             "Church of the Nazarene",
             "Churches of Christ",
             "Elim Fellowship",
             "Episcopal",
             "Friends",
             "Hindu",
             "Jain",
