<!-- Start Personal Information Module -->
<% remote_form_for(:support, 
                   :url => patient_data_instance_support_path(patient_data),
                   :update => 'support') do |f| %>
<h5>Support</h5>
<table>
  <tr class="<%= cycle("darkzebra", "lightzebra")%>">
    <td class="lighttext">Start Support</td>
    <td><%= f.date_select :start_support %></td>
  </tr>
  <tr class="<%= cycle("darkzebra", "lightzebra")%>">
    <td class="lighttext">End Support</td>
    <td><%= f.date_select :end_support %></td>
  </tr>
  <%= render :partial => '/person_names/edit', :locals => {:person_name => support.person_name}%>
  <tr class="<%= cycle("darkzebra", "lightzebra")%>">
    <td class="lighttext">Contact</td>
    <td><%= f.text_field :contact_relationship %></td>
  </tr>
  <tr class="<%= cycle("darkzebra", "lightzebra")%>">
    <td class="lighttext">Type</td>
    <td><%= f.text_field :contact_type %></td>
  </tr>
  <%= render :partial => '/addresses/edit', :locals => {:address => support.address}%>
  <%= render :partial => '/telecoms/edit', :locals => {:telecom => support.telecom}%>
  <tr class="<%= cycle("darkzebra", "lightzebra")%>">
    <td></td>
    <td><%= f.submit "Save" %></td>
  </tr>
</table>
<% end %>


